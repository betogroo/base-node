<%- include('../partials/header.ejs') %>

<div class="container">

    <h1>Permissões</h1>
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Nível</th>
                <th scope="col">Título</th>
                <th scope="col">Ações</th>

            </tr>
        </thead>
        <tbody>
            <% roles.forEach(role => { %>
            <tr>
                <th scope="row"><%= role.id%> </th>
                <td><%= role.name%></td>
                <td>
                    <form action="/role/delete" method="POST">
                        <input type="hidden" name="id" value="<%=role.id%>">
                        <button class="btn btn-sm btn-danger" type="submit">
                            <svg class="bi bi-x-circle" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm0 1A8 8 0 108 0a8 8 0 000 16z" clip-rule="evenodd"/>
                                <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z" clip-rule="evenodd"/>
                                <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z" clip-rule="evenodd"/>
                            </svg>
                        </button>

                        <a class="btn btn-sm btn-warning" href="/role/edit/<%= role.id%>">
                            <svg class="bi bi-exclamation-circle" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm0 1A8 8 0 108 0a8 8 0 000 16z" clip-rule="evenodd"/>
                                <path d="M7.002 11a1 1 0 112 0 1 1 0 01-2 0zM7.1 4.995a.905.905 0 111.8 0l-.35 3.507a.552.552 0 01-1.1 0L7.1 4.995z"/>
                            </svg>
                        </a>
                    </form>
                </td>

            </tr>
            <% }) %>


        </tbody>
    </table>


</div>

<%- include('../partials/footer.ejs') %>